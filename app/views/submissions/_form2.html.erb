  <div class="field">
    <%= form.label :画像 %>
    <%= form.file_field :filename %>
  </div>

<table>
<thead>

 <tr>
   <th>名前</th>
   <th>提出状況</th>
 </tr>
</thead>

<tbody>
 <% @members.each_with_index do |member,index| %>
   <tr>
     <td align="center"><%= member.name %></td>
     <td><label><%= form.radio_button Submission.column_names[ index + 7 ].to_sym, 0 %>未提出</label></td>
     <td><label><%= form.radio_button Submission.column_names[ index + 7 ].to_sym, 1 %>再提出</label></td>
     <td><label><%= form.radio_button Submission.column_names[ index + 7 ].to_sym, 2 %>提出済</label></td>
   </tr>
 <% end %>
</tbody>
</table>


  <div class="actions">
    <%= form.submit "編集" %>
  </div>


