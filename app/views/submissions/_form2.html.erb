<br>
<table border = "1" width = "100%">
<thead class = "s-hyou2">

 <tr>
   <th class="fs25">名前</th>
   <th colspan="3" class="fs25">提出状況</th>
 </tr>
</thead>

<tbody class = "s-hyou">
 <% @members.each_with_index do |member,index| %>
   <tr>
     <td align="center" class="fs20"><%= member.name %></td>
     <td class="fs20"><label><%= form.radio_button Submission.column_names[ index + 7 ].to_sym, 0 %>未提出</label></td>
     <td class="fs20"><label><%= form.radio_button Submission.column_names[ index + 7 ].to_sym, 1 %>再提出</label></td>
     <td class="fs20"><label><%= form.radio_button Submission.column_names[ index + 7 ].to_sym, 2 %>提出済</label></td>
   </tr>
 <% end %>
</tbody>
</table>
<br>

  <div class="actions">
    <%= form.submit "更新",class:"submit" %>
    <%= link_to '戻る', submissions_path, class:"submit" %>
  </div>



