<p id="notice"><%= notice %></p>

<b><font size="6">提出物一覧</font></b>
  <div style = "text-align: right;float;right">
    <span><font size="4"><%= Date.current.strftime('%Y/%m/%d') %></font>
      <%= link_to '登録', new_submission_path %>
    </span>
  </div>



<%= form_tag('/submissions_search') do %>
  <p>
   <font size="4">科目</font>
   <%= select_tag 'search[subject]',options_for_select({国語: "国語", 数学: "数学", 英語: "英語", 社会: "社会", 理科: "理科"}, ""), include_blank: true %>
   <font size="4">期限</font>
   <%= select_tag 'search[deadline]',options_for_select({期限前: "期限前", 期限切れ: "期限切れ"}, ""), include_blank: true %>
  </p>
  <p>
  <font size="4">タイトル</font>
   <%= text_field_tag 'search[title]' %>
   <%= submit_tag '検索' %>
  </p> 

<% end %>

<%= form_tag('/submissions_select_edit') do %>

  <p>
   <%= submit_tag "選択編集" %>
   &thinsp;
   <%= submit_tag "選択削除" %>
  </p>

  <table border = "1" width = "100%">
    </thead>

     <tr>
       <th></th>
       <th><font size="4">科目</font></th>
       <th><font size="4">タイトル</font></th>
       <th><font size="4">対象</font></th>
       <th><font size="4">期限</font></th>
       <th></th>
       <th></th>
       <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
     <% @submissions.each do |submission| %>
       <tr>
         <td align="center"><%= check_box_tag "select_datas[#{ submission.id }]", submission.id %></td>
         <td align="center"><%= submission.subject %></td>
         <td align="center"><%= submission.title %></td>
         <td align="center"><%= submission.grade %>-<%= submission.class_room %></td>
         <td align="center"><%= submission.deadline %></td>

         <td align="center"><%= link_to '詳細', submission %></td>
         <td align="center"><%= link_to '編集', edit_submission_path(submission) %></td>
         <td align="center"><%= link_to '削除', submission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
     <% end %>
   </tbody>
  </table>
<% end %>