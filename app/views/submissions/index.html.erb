<p id="notice"><%= notice %></p>

<b><font size="6">提出物一覧</font></b>
  <div style = "text-align: right;float;right">
    <span><%= link_to '登録', new_submission_path %>
      <%= 
      
      Date.current.strftime('%Y/%m/%d') %>
    </span>
  </div>



<%= form_tag('/submissions_search') do %>
  <p>
   科目
   <%= select_tag 'search[subject]',options_for_select({国語: "国語", 数学: "数学", 英語: "英語", 社会: "社会", 理科: "理科"}, ""), include_blank: true %>
   期限
   <%= select_tag 'search[deadline]',options_for_select({期限前: "期限前", 期限切れ: "期限切れ"}, ""), include_blank: true %>
  </p>
  <p>
   タイトル
   <%= text_field_tag 'search[title]' %>
   <%= submit_tag '検索' %>
  </p> 

<% end %>

<%= form_tag('/submissions_select_edit') do %>

  <p>
   <%= submit_tag "選択編集" %>
   &thinsp;
   <%= submit_tag "選択削除" %>
  </p>

  <table>
   <table border = "1">
    </thead>

     <tr>
       <th></th>
       <th>科目</th>
       <th>タイトル</th>
       <th>学年</th>
       <th>クラス</th>
       <th>期限</th>
       <th></th>
       <th></th>
       <th></th>
       <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
     <% @submissions.each do |submission| %>
       <tr>
         <td><%= check_box_tag "select_datas[#{ submission.id }]", submission.id %></td>
         <td><%= submission.subject %></td>
         <td><%= submission.title %></td>
         <td><%= submission.grade %></td>
         <td><%= submission.class_room %></td>
         <td><%= submission.deadline %></td>

         <td><%= link_to '詳細', submission %></td>
         <td><%= link_to '編集', edit_submission_path(submission) %></td>
         <td><%= link_to '削除', submission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
     <% end %>
   </tbody>
  </table>
<% end %>