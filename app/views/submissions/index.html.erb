<p id="notice"><%= notice %></p>

<h1>提出物一覧</h1>

<%= form_tag('/submissions_search') do %>
  <p>
  タイトル
  <br>
  <%= text_field_tag 'search[title]' %><%= submit_tag '検索' %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>科目</th>
      <th>タイトル</th>
      <th>期限</th>
      <th>学年</th>
      <th>クラス</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submissions.each do |submission| %>
      <tr>
        <td><%= submission.subject %></td>
        <td><%= submission.title %></td>
        <td><%= submission.deadline %></td>
        <td><%= submission.grade %></td>
        <td><%= submission.class_room %></td>
 
        <td><%= link_to 'Show', submission %></td>
        <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
        <td><%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '登録', new_submission_path %>

<%= Date.current.strftime('%Y/%m/%d') %>