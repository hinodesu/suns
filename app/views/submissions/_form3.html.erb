<div class="actions">
  <%= form.submit "登録", onclick: "return isCheck()"  %>
  <%= link_to '戻る', submissions_path,class:"btn-sub" %>
</div>

<script type="text/javascript">
  function isCheck() {
  var arr_checkBoxes = document.getElementsByClassName("list");
  var count = 0;
  for (var i = 0; i <arr_checkBoxes.length; i++) {
    if (arr_checkBoxes[i].checked) {
      count++;
    }
  }
  if (count > 0) {
    return true;
  } else {
    window.alert("項目を1つ上選択してください。");
    return false;
  }
}
</script>