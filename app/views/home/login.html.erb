<h1 
  style="text-align:center;font-size:50px">ログイン
  </h1>
<br>

<% if flash[:alert] %>
  <p style="color:red;text-align:center;"><%= flash[:alert] %></p>
<% end %>

<h1 style="text-align:center;font-size:25px">
<%= form_tag('/check') do %>

    <%= label_tag :ユーザーID %><br>
    <%= text_field_tag :number %><br>
  
    <%= label_tag :パスワード %><br>
    <%= password_field_tag :password %><br>

    <div class="actions">
    <%= submit_tag "ログイン" %></h1>
  </div>
  
<% end %>