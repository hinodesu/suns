<p id="notice"><%= notice %></p>

<!DOCTYPE html>
<html lang="ja">
<meta charset=”utf-8″>

<h1 style="text-align:left" class="tit" >お知らせ一覧</h1>

<table width="90%">
 <thead class="notific">
  <tr>
    <th width="50%">時間割</th>
    <th>お知らせ</th>
    </tr>
 </thead>

 <tbody class="notif">
   <div class = "inline-block_test" >
     <tr class = "center">
       <% if @today_timetable.present? %>
         <td>
         <%= link_to asset_url("#{@today_timetable.filename}"), target: "_blank" do %>
           <%= image_tag @today_timetable.filename %>
         <% end %>
         </td>
       <% else %>
         <td>時間割変更はありません</td>
       <% end %>
       
        <% if @tomorrow_notice.present? %>
          <td>
          <%= link_to asset_url("#{@tomorrow_notice.filename}"), target: "_blank" do %>
            <%= image_tag @tomorrow_notice.filename %>
        <% end %>
          </td>
        <% else %>
          <td>お知らせはありません</td>
        <% end %>
     </tr>
   </div>
  </tbody>
</table>

<br>

<% if @user_code && @user_code.first == "t" %>
  <font size="3">
    <%= link_to '新規作成', new_notification_path,class: "btn-not" %>
    <table border="1">
      <thead class="notific">
        <tr>
          <th>表示日付</th>
          <th>カテゴリー</th>
          <th>詳細</td>
          <th>編集</th>
          <th>削除</th>
        </tr>
      </thead>

      <tbody class="notif">
        <% @notifications.each do |notification| %>
          <tr>
            <td>
              <%= notification.d_day.strftime('%Y/%m/%d') %>
            </td>
            <td>
            <% if notification.category == 1 %>
              時間割
            <% else %>
              お知らせ
            <% end %>
            </td>
            <td><%= link_to '詳細', notification %></td>
            <td><%= link_to '編集', edit_notification_path(notification) %></td>
            <td><%= link_to '削除', notification, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </font>
<% end %>
