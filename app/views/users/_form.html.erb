  <%= form.label :"年" %>
  <%= form.select :grade,{"":"","1":"1","2":"2","3":"3"}%>
  </div>

  <div class="field">
  <%= form.label :"組" %>
  <%= form.select :class_room,{"":"","1":"1","2":"2","3":"3","4":"4"}%>
  </div>


  <div class="field">
    <%= form.label :名前 %>
    <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <%= form.label :ふりがな %>
    <%= form.text_field :kana, id: :user_kana %>
  </div>

  <div class="field">
    <%= form.label :性別 %>
    <label><%= form.radio_button :gender, 1 %>男</label>
    <label><%= form.radio_button :gender, 2 %>女</label>    <%= form.text_field :gender, id: :user_gender %>

    </div>

  <div class="field">
    <%= form.label :パスワード %>
    <%= form.number_field :pass, id: :user_pass %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

