<% if params[:commit] == "選択編集" %>
　　　<h1>選択編集画面</h1>
　　<% else %>
　　　<h1>選択削除画面</h1>
　　<% end %>
　　<%= link_to '一覧に戻る', users_path %>



<table>


<table border="1">

<thead>

  <caption align="right">

    <%=submit_tag "選択編集"%>
    &thinsp; 
    <%=submit_tag "選択削除"%>
  </caption>


  <tr>    
    <th></th>
    <th>年</th>
    <th>組</th>
    <th>番</th>
    <th>名前</th>
    <th>性別</th>
    <th></th>
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <% @users.each do |user| %>
  
    <tr>
      <td><%= check_box_tag "select_datas[#{ user.id }]", user.id %></td>
      <td><%= user.grade %></td>
      <td><%= user.class_room %></td>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.gender %></td>
      <td><%= link_to '編集', edit_user_path(user) %></td>
      <td><%= link_to '詳細', user %></td>
    </tr>
  <% end %>
</tbody>
</table>

